{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./src",
    "checkJs": false,
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "preserve",
    "lib": [
      "es2019",
      "dom",
      "es2019.object",
      "esnext",
      "esnext.asynciterable"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noImplicitAny": true,
    "paths": {
      "@/*": [
        "*"
      ],
      "~/*": [
        "*"
      ]
    },
    "suppressImplicitAnyIndexErrors": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "ESNext",
    "types": [
      "@types/nuxt",
      "@types/node",
      "@nuxt/types",
      "@nuxtjs/sentry",
      "@nuxt/axios",
      "@types/jest",
      "@nuxtjs/toast",
      "web3-core/types",
      "nuxt-typed-vuex"
    ]
  },
  "exclude": [
    "node_modules/*",
    "dist/*",
    ".yarn/*",
    "public/*",
    ".nuxt/*",
    ".github/*",
    "environments/*",
    "tests/*"
  ]
}
